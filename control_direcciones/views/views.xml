<odoo>
    <record id="view_tree_control" model="ir.ui.view">
        <field name="name">view.tree.control</field>
        <field name="model">controles.control</field>
        <field name="arch" type="xml">
            <tree>
                <field name="floor" string="Piso"/>
                <field name="name" string="Nombre"/>
                <field name="vlan" string="Vlan"/>
                <field name="current_ip" string="Ip_actual"/>
                <field name="address" string="Direccion"/>
                <field name="coordination" string="Coordinacion"/>
                <field name="ci" string="Cedula_identidad"/>
                <field name="host_name" string="Host_name"/>
                <field name="user" string="Usuario"/>
                <field name="ext_phone" string="Extencion_telefonica"/>
                <field name="comments" string="Observaciones"/>
            </tree>
        </field>
    </record>

    <record id="view_form_control" model="ir.ui.view">
        <field name="name">view.tree.control</field>
        <field name="model">controles.control</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>

                        <field name="floor" string="Piso"/>
                        <field name="name" string="Nombre"/>
                        <field name="vlan" string="Vlan"/>
                        <field name="current_ip" string="Ip_actual"/>
                        <field name="address" string="Direccion"/>
                        <field name="coordination" string="Coordinacion"/>
                        <field name="ci" string="Cedula_identidad"/>
                        <field name="host_name" string="Host_name"/>
                        <field name="user" string="Usuario"/>
                        <field name="ext_phone" string="Extencion_telefonica"/>
                        <field name="comments" string="Observaciones"/>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_view_control" model="ir.actions.act_window">
        <field name="name">Control de Direcciones Ips</field>
        <field name="res_model">controles.control</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create"> Listado </p>
        </field>

    </record>

    <menuitem id="menu_control" parent="" action="control_direcciones.action_view_control" />
</odoo>
